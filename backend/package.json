{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend for gif generation",
  "main": "index.js",
  "author": "Frol Shpak",
  "license": "MIT",
  "scripts": {
    "lint": "eslint",
    "start:dev": "nodemon --exec babel-node ./src/app.js --nodeEnv=dev",
    "start:test": "nodemon --exec babel-node ./src/app.js --nodeEnv=test",
    "build": "babel src --out-dir build",
    "start": "nodemon ./build/app.js --nodeEnv=prod"
  },
  "dependencies": {
    "@google-cloud/firestore": "^4.9.1",
    "@google-cloud/storage": "^5.7.3",
    "convict": "^6.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fluent-ffmpeg": "^2.1.2",
    "multer": "^1.4.2",
    "nodemon": "^2.0.7",
    "regenerator-runtime": "^0.13.7",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "babel-plugin-inline-dotenv": "^1.6.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "inline-dotenv",
        {
          "path": "./.env"
        }
      ]
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "google",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "rules": {
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "indent": [
        "error"
      ],
      "new-cap": "warn",
      "no-unused-vars": "warn",
      "max-len": "warn"
    }
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "2500"
  }
}

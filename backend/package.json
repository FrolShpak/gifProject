{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend for gif generation",
  "main": "index.js",
  "author": "Frol Shpak",
  "license": "MIT",
  "scripts": {
    "lint": "eslint",
    "start:dev": "nodemon --exec babel-node app.js --nodeEnv=dev",
    "start:test": "nodemon --exec babel-node app.js --nodeEnv=test",
    "build": "babel app.js --out-file app-compiled.js --nodeEnv=prod"
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "convict": "^6.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.11.13",
    "multer": "^1.4.2",
    "nodemon": "^2.0.7"
  },
  "devDependencies": {
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "google",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "rules": {
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "indent": [
        "error"
      ],
      "new-cap": "warn",
      "no-unused-vars": "warn",
      "max-len": "warn"
    }
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "2500"
  }
}
